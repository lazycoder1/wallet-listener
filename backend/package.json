    "@prisma/client": "^5.14.0",
    "@slack/web-api": "^7.9.2",
    "@types/dotenv": "^8.2.3",
    "@types/winston": "^2.4.4",
    "alchemy-sdk": "^3.6.1",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.3",
    "tronweb": "^6.0.3",
    "viem": "^2.29.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "prisma": "^5.14.0",
    "ts-node": "^10.9.2"
  }
