{
    "name": "wallet-watcher-backend",
    "version": "0.1.0",
    "scripts": {
        "dev": "NODE_ENV=development bun --watch src/index.ts",
        "dev:gc": "bun --expose-gc --watch src/index.ts",
        "dev:node": "tsx watch src/index.ts",
        "start": "NODE_ENV=production bun src/index.ts",
        "start:gc": "bun --expose-gc src/index.ts",
        "start:node": "tsx src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start:prod": "bun dist/index.js",
        "start:prod:gc": "bun --expose-gc dist/index.js",
        "setup:admin": "bun scripts/createInitialUser.ts",
        "setup:admin:node": "tsx scripts/createInitialUser.ts",
        "verify:login": "bun scripts/verifyLogin.ts",
        "verify:login:node": "tsx scripts/verifyLogin.ts",
        "list:users": "bun scripts/listUsers.ts",
        "list:users:node": "tsx scripts/listUsers.ts",
        "reset:user": "bun scripts/resetAndCreateUser.ts",
        "reset:user:node": "tsx scripts/resetAndCreateUser.ts",
        "db:migrate": "npx prisma migrate dev",
        "db:deploy": "npx prisma migrate deploy",
        "db:reset": "npx prisma migrate reset --force",
        "dev:dotenv": "dotenv -e .env.development -- bun --watch src/index.ts",
        "prod:dotenv": "dotenv -e .env.production -- bun src/index.ts",
        "db:migrate:development": "bash -lc 'export PRISMA_SKIP_ENV_LOAD=1; set -o allexport; source .env.development; set +o allexport; npx prisma migrate dev'",
        "db:deploy:development": "bash -lc 'export PRISMA_SKIP_ENV_LOAD=1; set -o allexport; source .env.development; set +o allexport; npx prisma migrate deploy'",
        "db:reset:development": "bash -lc 'export PRISMA_SKIP_ENV_LOAD=1; set -o allexport; source .env.development; set +o allexport; npx prisma migrate reset --force'",
        "start:development": "bash -lc 'export PRISMA_SKIP_ENV_LOAD=1; set -o allexport; source .env.development; set +o allexport; bun src/index.ts'",
        "setup:admin:development": "bash -lc 'export PRISMA_SKIP_ENV_LOAD=1; set -o allexport; source .env.development; set +o allexport; bun scripts/createInitialUser.ts'",
        "reset:user:development": "bash -lc 'export PRISMA_SKIP_ENV_LOAD=1; set -o allexport; source .env.development; set +o allexport; bun scripts/resetAndCreateUser.ts'",
        "db:generate": "npx prisma generate"
    },
    "dependencies": {
        "@fastify/cors": "^11.0.1",
        "@fastify/jwt": "^9.0.1",
        "@fastify/type-provider-typebox": "^5.1.0",
        "@jest/globals": "^30.0.0-beta.3",
        "@prisma/client": "^5.14.0",
        "@slack/web-api": "^7.9.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/dotenv": "^8.2.3",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/winston": "^2.4.4",
        "alchemy-sdk": "^3.6.1",
        "axios": "^1.9.0",
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.5.0",
        "fastify": "^5.3.3",
        "jsonwebtoken": "^9.0.2",
        "tronweb": "^6.0.3",
        "viem": "^2.29.3",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "dotenv-cli": "^10.0.0",
        "dotenv-flow": "^4.1.0",
        "prisma": "^5.14.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.7.1"
    }
}
